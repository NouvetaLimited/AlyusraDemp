<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.glackemi.alyusra.MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="127dp"
            android:layout_height="97dp"
            android:layout_gravity="center"
            android:background="@drawable/logo_payme"
            android:text="Hello World!"
            android:visibility="visible" />
        <ImageView
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:id="@+id/valid"
            android:layout_gravity="center"
            android:background="@drawable/valid"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:text="Hello World!"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/invalid"
            android:layout_gravity="center"
            android:background="@drawable/invalid"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:text="Hello World!"
            />

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressBar"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_width="20sp"
            android:layout_height="20sp" />



        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="250sp"
            android:layout_height="wrap_content">



            <EditText
                android:layout_marginTop="30dp"
                android:id="@+id/order_number"
                android:background="@drawable/rectangle_background"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/validate"
                android:layout_marginTop="50dp"
                android:text="@string/Check"
                android:layout_width="match_parent"
                android:layout_height="70sp" />


            <TextView
                android:id="@+id/cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:text="CASH OPTION"
                android:textColor="@android:color/black"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:text="Card"
                android:textColor="@android:color/black"
                android:visibility="invisible" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:src="@drawable/powerby" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>




